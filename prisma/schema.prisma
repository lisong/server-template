generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                  BigInt    @id @default(autoincrement())
  name                String    @unique(map: "User_UNIQUE") @default("") @db.VarChar(50)
  email               String    @unique(map: "EMAIL_UNIQUE") @default("") @db.VarChar(255)
  password            String    @default("") @db.VarChar(200)
  status              Int       @default(0) @db.TinyInt
  login_attempts      Int       @default(0)
  lock_until          DateTime? @db.DateTime(0)
  updated_at          DateTime  @default(now()) @db.DateTime(0)
  created_at          DateTime  @default(now()) @db.DateTime(0)
  password_changed_at DateTime? @db.DateTime(0)
}